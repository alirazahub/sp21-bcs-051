<div class="mx-4 md:mx-20 lg:mx-40 flex justify-center">
    <div class="bg-white p-8 rounded shadow-md w-full max-w-2xl">
        <h1 class="text-3xl font-bold mb-4">Edit Task</h1>
        <form action="/tasks/<%= task?._id %>/edit" method="post">
            <div class="flex mb-4">
                <div class="w-1/2 pr-2">
                    <label for="title" class="form-label">Title:</label>
                    <input type="text" id="title" name="title" value="<%= task?.title %>"
                        class="border rounded w-full p-2 mb-2 outline-none">
                </div>
                <div class="w-1/2 pl-2">
                    <label for="dueDate" class="form-label">Due Date:</label>
                    <input type="date" id="dueDate" name="dueDate" value="<%= task?.dueDate %>"
                        class="border rounded w-full p-2 mb-2 outline-none">
                </div>
            </div>
            <div class="flex mb-4">
                <div class="w-1/2 pr-2">
                    <label for="status" class="form-label">Status:</label>
                    <select id="status" name="status" class="border rounded w-full p-2 mb-2 outline-none">
                        <option value="completed" <%= task?.status === 'completed' ? 'selected' : '' %>>Completed</option>
                        <option value="in progress" <%= task?.status === 'in progress' ? 'selected' : '' %>>In Progress</option>
                        <option value="pending" <%= task?.status === 'pending' ? 'selected' : '' %>>Pending</option>
                    </select>
                </div>
                <div class="w-1/2 pl-2">
                    <label for="priority" class="form-label">Priority:</label>
                    <select id="priority" name="priority" class="border rounded w-full p-2 mb-2 outline-none">
                        <option value="low" <%= task?.priority === 'low' ? 'selected' : '' %>>Low</option>
                        <option value="medium" <%= task?.priority === 'medium' ? 'selected' : '' %>>Medium</option>
                        <option value="high" <%= task?.priority === 'high' ? 'selected' : '' %>>High</option>
                    </select>
                </div>
            </div>
            <div class="flex mb-4">
                <div class="w-full pr-2">
                    <label for="description" class="form-label">Description:</label>
                    <textarea id="description" name="description"
                        class="border rounded w-full p-2 mb-2 outline-none"><%= task?.description %></textarea>
                </div>
            </div>
            <div class="flex justify-between">
                <div class="my-3">
                    <a href="/" class="border-[1px] border-red-500 rounded-lg p-2 text-red-500 hover:bg-red-500 hover:text-white">Back</a>
                </div>
                <button type="submit" class="border-[1px] border-green-500 rounded-lg p-2 text-green-500 hover:bg-green-500 hover:text-white">Update Task</button>
            </div>
        </form>
    </div>
</div>
