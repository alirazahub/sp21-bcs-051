<div class="mx-[200px] flex justify-center">
    <div>
        <h1 class="text-[30px] font-bold">New Task</h1>
        <% if (errors && errors.length> 0) { %>
            <ul style="color: red;">
                <% errors.forEach(error=> { %>
                    <li>
                        <%= error.msg %>
                    </li>
                    <% }); %>
            </ul>
            <% } %>
                <form action="/tasks/new" method="post">
                    <div class="flex mb-4">
                        <div class="w-1/2 pr-2">
                            <label for="title" class="form-label">Title:</label>
                            <input type="text" id="title" name="title"
                                class="border rounded w-full p-2 mb-2 outline-none">
                        </div>
                        <div class="w-1/2 pl-2">
                            <label for="dueDate" class="form-label">Due Date:</label>
                            <input type="date" id="dueDate" name="dueDate"
                                class="border rounded w-full p-2 mb-2 outline-none">
                        </div>
                    </div>
                    <div class="flex mb-4">
                        <div class="w-1/2 pr-2">
                            <label for="status" class="form-label">Status:</label>
                            <select id="status" name="status" class="border rounded w-full p-2 mb-2 outline-none">
                                <option value="completed">Completed</option>
                                <option value="in progress">In Progress</option>
                                <option value="pending">Pending</option>
                            </select>
                        </div>
                        <div class="w-1/2 pl-2">
                            <label for="priority" class="form-label">Priority:</label>
                            <select id="priority" name="priority" class="border rounded w-full p-2 mb-2 outline-none">
                                <option value="low">Low</option>
                                <option value="medium">Medium</option>
                                <option value="high">High</option>
                            </select>
                        </div>
                    </div>
                    <div class="flex mb-4">
                        <div class="w-full pr-2">
                            <label for="description" class="form-label">Description:</label>
                            <textarea id="description" name="description"
                                class="border rounded w-full p-2 mb-2 outline-none"></textarea>
                        </div>
                    </div>
                    <div class="flex justify-between">
                        <div class="my-3">
                            <a class="border-[1px] border-red-500 rounded-lg p-2 text-red-500 hover:bg-red-500 hover:text-white" href="/">Back</a>
                        </div>
                        <button class="border-[1px] border-green-500 rounded-lg p-2 text-green-500 hover:bg-green-500 hover:text-white" type="submit">Create Task</button>
                    </div>
                    </form>
    </div>
</div>